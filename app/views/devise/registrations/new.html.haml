.new-user
  .new-user__topcolor
    .new-user__topcolor__title
      .new-user__topcolor__title__text
        = link_to "Introbooktion", new_user_session_path, class: "Introduction-button"
    .new-user__topcolor__icon
      = link_to new_user_session_path do
        = render "icon/icon2"
      
  .new-user__middlecolor1
  .new-user__middlecolor2
  .new-user__content
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .new-user__content__box
        アカウント作成
      .new-user__content__input
        = f.text_field :nickname, class: "nickname"
        .nickname-title
          ニックネーム
        = f.text_field :name_id, class: "name_id"
        .name_id-title
          ID
        = f.email_field :email, class: "email-address"
        .email-address-title
          メールアドレス
        = f.password_field :"パスワード", class: "password"
        .password-title
          パスワード
        = f.password_field :"パスワード確認", class: "password-confirmation"
        .password-confirmation-title
          パスワード確認
      .new-user__content__button
        = f.submit "introbooktionを始める", class: "start-button"

